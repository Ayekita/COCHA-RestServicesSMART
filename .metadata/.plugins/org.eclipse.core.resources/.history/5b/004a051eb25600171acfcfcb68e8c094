package com.cocha.lineacredito.utiles;

import com.cocha.lineacredito.dto.datosSalidaDTO;

public class imprimeSalida {
	public static StringBuilder titulos() {
		StringBuilder texto = new StringBuilder();
		String sep = ";";

		texto.append("RUT");
		texto.append(sep);
		texto.append("DV");
		texto.append(sep);
		texto.append("NEMOTE");
		texto.append(sep);		
		texto.append("NEMOGR");
		texto.append(sep);
		texto.append("RAZON SOCIAL");
		texto.append(sep);
		texto.append("TIPO");
		texto.append(sep);		
		texto.append("FRECUENCIA");
		texto.append(sep);
		texto.append("REQUIERE OC");
		texto.append(sep);
		texto.append("LINEA AUTORIZADA CLP");
		texto.append(sep);
		texto.append("LINEA UTILIZADA CLP");
		texto.append(sep);
		texto.append("LINEA DISPONIBLE CLP");
		texto.append(sep);
		texto.append("LINEA AUTORIZADA USD");
		texto.append(sep);
		texto.append("LINEA UTILIZADA USD");
		texto.append(sep);
		texto.append("LINEA DISPONIBLE USD");	
		texto.append(sep);
		texto.append("TASA DE CAMBIO");
		texto.append(sep);
		texto.append("LINEA EQUIVALENTE AUTORIZADA");
		texto.append(sep);
		texto.append("LINEA EQUIVALENTE UTILIZADA");
		texto.append(sep);
		texto.append("LINEA EQUIVALENTE DISPONIBLE");	

		return texto;
	}

	public static StringBuilder datos(datosSalidaDTO datos) {
		StringBuilder texto = new StringBuilder();
		String sep = ";";

		texto.append(Integer.toString(datos.getRut()));
		texto.append(sep);
		texto.append(datos.getDv());
		texto.append(sep);
		texto.append(datos.getNemote());
		texto.append(sep);		
		texto.append(datos.getNemogr());
		texto.append(sep);
		texto.append(datos.getRazonSocial());
		texto.append(sep);
		texto.append(datos.getTipo());
		texto.append(sep);		
		texto.append(datos.getFrecuencia());
		texto.append(sep);
		texto.append(datos.getReqOC());
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaAutorizadaCLP()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaUtilizadaCLP()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaDisponibleCLP()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaAutorizadaUSD()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaUtilizadaUSD()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaDisponibleUSD()));
		texto.append(sep);
		texto.append(Integer.toString(datos.getTasaCambio()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteAutorizada()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteUtilizada()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteDisponible()));
		return texto;
	}
}
