package com.cocha.utiles;

import com.cocha.dto.DatosSalidaTO;

public class imprimeSalida {
	public static StringBuilder titulos() {
		StringBuilder texto = new StringBuilder();
		String sep = ";";

		texto.append("\n RUT");
		texto.append(sep);
		texto.append("\n \n DV");
		texto.append(sep);
		texto.append("\n NEMOTE");
		texto.append(sep);		
		texto.append("\n NEMOGR");
		texto.append(sep);
		texto.append("\n RAZON SOCIAL");
		texto.append(sep);
		texto.append("\n TIPO");
		texto.append(sep);		
		texto.append("\n FRECUENCIA");
		texto.append(sep);
		texto.append("\n REQUIERE OC");
		texto.append(sep);
		texto.append("\n LINEA AUTORIZADA CLP");
		texto.append(sep);
		texto.append("\n LINEA UTILIZADA CLP");
		texto.append(sep);
		texto.append("\n LINEA DISPONIBLE CLP");
		texto.append(sep);
		texto.append("\n LINEA AUTORIZADA USD");
		texto.append(sep);
		texto.append("\n LINEA UTILIZADA USD");
		texto.append(sep);
		texto.append("\n LINEA DISPONIBLE USD");	
		texto.append(sep);
		texto.append("\n TASA DE CAMBIO");
		texto.append(sep);
		texto.append("\n LINEA EQUIVALENTE AUTORIZADA");
		texto.append(sep);
		texto.append("\n LINEA EQUIVALENTE UTILIZADA");
		texto.append(sep);
		texto.append("\n LINEA EQUIVALENTE DISPONIBLE");	

		return texto;
	}

	public static StringBuilder datos(DatosSalidaTO datos) {
		StringBuilder texto = new StringBuilder();
		String sep = ";";

		texto.append(Integer.toString(datos.getRut()));
		texto.append(sep);
		texto.append(datos.getDv());
		texto.append(sep);
		texto.append(datos.getNemote());
		texto.append(sep);		
		texto.append(datos.getNemogr());
		texto.append(sep);
		texto.append(datos.getRazonSocial());
		texto.append(sep);
		texto.append(datos.getTipo());
		texto.append(sep);		
		texto.append(datos.getFrecuencia());
		texto.append(sep);
		texto.append(datos.getReqOC());
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaAutorizadaCLP()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaUtilizadaCLP()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaDisponibleCLP()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaAutorizadaUSD()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaUtilizadaUSD()));
		texto.append(sep);
		texto.append(Double.toString(datos.getLineaDisponibleUSD()));
		texto.append(sep);
		texto.append(Integer.toString(datos.getTasaCambio()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteAutorizada()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteUtilizada()));
		texto.append(sep);
		texto.append(Long.toString(datos.getLineaEquivalenteDisponible()));
		return texto;
	}
}
